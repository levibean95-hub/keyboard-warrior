# Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Development/Production Mode
VITE_NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_API=false

# Application Configuration
VITE_APP_TITLE=Keyboard Warrior
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Argument Assistant

# UI Configuration
VITE_THEME=light
VITE_DEFAULT_LANGUAGE=en

# Performance
VITE_BUNDLE_ANALYZER=false
VITE_ENABLE_PWA=false

# Security
VITE_CSP_NONCE=
VITE_ENABLE_HTTPS=false

# Monitoring (if using services like Sentry)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production

# Analytics (if using services like Google Analytics)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# CDN Configuration
VITE_CDN_BASE_URL=
VITE_ASSETS_BASE_URL=/

# Build Configuration
VITE_BUILD_SOURCE_MAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_GZIP=true

# Social Media Integration
VITE_TWITTER_HANDLE=
VITE_GITHUB_REPO=

# Legal
VITE_PRIVACY_POLICY_URL=
VITE_TERMS_OF_SERVICE_URL=
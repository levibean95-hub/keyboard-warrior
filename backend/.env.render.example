# Render Environment Variables
# Copy this file to .env for local development
# These will be set in Render dashboard for production

# Server Configuration
NODE_ENV=production
PORT=5000

# CORS Configuration - IMPORTANT: Set this to your Vercel frontend URL
CORS_ORIGIN=https://your-frontend.vercel.app

# Database Configuration
DATABASE_URL=file:/app/data/keyboard-warrior.db

# Authentication - Render will auto-generate JWT_SECRET
JWT_SECRET=your-secret-key-here

# OpenAI Configuration - REQUIRED: Set this in Render dashboard
OPENAI_API_KEY=sk-your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: For enhanced security
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=86400000
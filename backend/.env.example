# Environment Configuration Template
# Copy this file to .env and update with your production values

# Application Environment
NODE_ENV=production
PORT=5000

# CORS Configuration
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database Configuration
DATABASE_PATH=./database.db
DATABASE_ENCRYPTION_KEY=your-32-character-database-encryption-key-here
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# JWT Security Configuration
JWT_SECRET=your-extremely-secure-jwt-secret-with-at-least-64-characters-change-this
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-extremely-secure-refresh-token-secret-64-chars-minimum
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=keyboard-warrior-api
JWT_AUDIENCE=keyboard-warrior-app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX_REQUESTS=20

# Password Security
BCRYPT_ROUNDS=12

# API Keys (DO NOT COMMIT TO VERSION CONTROL)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# Security Configuration
CSRF_SECRET=your-csrf-secret-key-32-characters-minimum
SESSION_SECRET=your-session-secret-key-64-characters-minimum
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'

# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT=5000
PERFORMANCE_MONITORING_ENABLED=true

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0